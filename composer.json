{
    "name": "true/event-sourcing",
    "type": "cakephp-plugin",
    "require": {
        "cakephp/orm": "^3.4",
        "cakephp/cache": "^3.4",
        "league/tactician": "^1.0",
        "bunny/bunny": "^0.2",
        "cakephp/form": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "BroadHorizon\\EventSourcing\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BroadHorizon\\EventSourcing\\Test\\": "tests",
            "App\\": "tests/test_app"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.1",
        "phpunit/phpunit": "^5.7",
        "josegonzalez/dotenv": "^3.0",
        "cakephp/cakephp-codesniffer": "^2.3"
    },
    "scripts": {
        "cs-fix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes"
    }
}
